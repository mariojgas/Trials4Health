@model Trials4Health.Models.RegExTestClass
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="panel panel-primary" style="margin-top:2em;">
        <div class="panel-heading">
            <h1 class=" panel-title">@ViewData["Title"]</h1>
        </div>

        <div class="panel-body">
            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" placeholder="Type your username" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" placeholder="Type your password" class="form-control" type="password"/>
            </div>
            <div asp-validation-summary="All"></div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Login" class="btn btn-success" />
            <input type="reset" value="Clear" class="btn btn-danger" />
        </div>
    </div>
</form>
