@model IRepositorioTrails

@{
    ViewData["Title"] = "Estatisticas";
}

<h2>Estatisticas</h2>
<div class="panel panel-primary" style="margin-top:28px;margin-bottom:10px">
    <div class="panel-heading">
        <h1 class=" panel-title">@ViewData["Title"]</h1>
    </div>
    
    @{


        foreach (Trilho t in Model.Trilhos)
        {
            Estatisticas estatisticas = new Estatisticas();
            estatisticas.distancia = t.Distancia;
            foreach (TrilhosPercorridos tp in Model.TrilhosPercorridos.Where(tpercorrido => tpercorrido.ID_Trilho == t.ID_Trilho))
            {

                /*foreach (Turista tu in Model.Turistas.Where(turista => turista.Id == tpercorrido.IdTurista))
                {

                    estatisticas.gerarEstatisticas(tp, tu.Idade);


                }*/
                estatisticas.gerarEstatisticas(tp, Model.Turistas.Where(tu => tu.ID_Turista == tp.ID_Turista).First().Idade);

            }

            
            <div>

                <h3>@t.Nome</h3>
                <h4>Distancia: @estatisticas.distancia</h4>
                <div>
                    Tempo Médio:
                @estatisticas.tempoMedio.Hours h : @estatisticas.tempoMedio.Minutes m : @estatisticas.tempoMedio.Seconds s
            </div>

            <div>
                Velocidade Média:
                @estatisticas.velocidadeMedia
            </div>

            <div>
                Idade Média:
                @estatisticas.idadeMedia
            </div>

            <div>
                Idade Máxima:
                @estatisticas.idadeMax
            </div>

            <div>
                Idade Mínima:
                @estatisticas.idadeMin
            </div>

            <div>
                Calorias Médias:
                @estatisticas.caloriasMedias
            </div>


        </div>



        }
        }
</div>
